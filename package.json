{
	"name": "10x-template",
	"version": "1.0.0",
	"description": "A blank template to get started with Payload 3.0",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "cross-env NODE_OPTIONS=--no-deprecation next build",
		"dev": "cross-env NODE_OPTIONS=--no-deprecation HOSTNAME=10x-template.dev.10xmedia.de PORT=3000 next dev",
		"devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
		"generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
		"generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
		"lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
		"payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
		"start": "cross-env NODE_OPTIONS=--no-deprecation next start",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"setup:mailpit": "node scripts/setup-mailpit.js",
		"setup:dev-domain": "node scripts/setup-dev-domain.js",
		"email": "email dev --dir ./src/emails -p 3001",
		"caddy:start": "sudo caddy start --config .caddy/Caddyfile > /dev/null 2>&1",
		"caddy:stop": "sudo caddy stop > /dev/null 2>&1",
		"caddy:reload": "sudo caddy reload --config .caddy/Caddyfile > /dev/null 2>&1",
		"dev:ssl": "sudo -p \"[sudo] Enter password to allow Caddy to bind to port 443: \" echo \"Password validated\" && concurrently \"pnpm dev\" \"pnpm caddy:start\""
	},
	"dependencies": {
		"@icons-pack/react-simple-icons": "^12.5.0",
		"@lexical/react": "0.28.0",
		"@payloadcms/db-mongodb": "3.33.0",
		"@payloadcms/email-nodemailer": "3.33.0",
		"@payloadcms/live-preview-react": "3.33.0",
		"@payloadcms/next": "3.33.0",
		"@payloadcms/payload-cloud": "3.33.0",
		"@payloadcms/plugin-nested-docs": "3.33.0",
		"@payloadcms/plugin-seo": "3.33.0",
		"@payloadcms/richtext-lexical": "3.33.0",
		"@payloadcms/translations": "3.33.0",
		"@payloadcms/ui": "3.33.0",
		"@react-email/components": "0.0.32",
		"@react-email/render": "^1.0.5",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cross-env": "^7.0.3",
		"embla-carousel-react": "^8.6.0",
		"graphql": "^16.8.1",
		"handlebars": "^4.7.8",
		"lucide-react": "^0.487.0",
		"next": "15.2.4",
		"nodemailer": "^6.10.0",
		"nuqs": "^2.4.1",
		"payload": "3.33.0",
		"radix-ui": "^1.1.3",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"server-only": "^0.0.1",
		"sharp": "0.32.6",
		"sonner": "^2.0.3",
		"standard-slugify": "^4.0.0",
		"tailwind-merge": "^2.6.0",
		"thumbhash": "^0.1.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@svgr/webpack": "^8.1.0",
		"@tailwindcss/postcss": "^4.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.5.4",
		"@types/nodemailer": "^6.4.17",
		"@types/react": "19.0.7",
		"@types/react-dom": "19.0.3",
		"concurrently": "^9.1.2",
		"dotenv": "^16.4.7",
		"eslint": "^9.16.0",
		"eslint-config-next": "15.1.5",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"postcss": "^8.5.1",
		"prettier": "^3.4.2",
		"react-email": "3.0.6",
		"tailwindcss": "^4.0.0",
		"tailwindcss-animate": "^1.0.7",
		"ts-node": "^10.9.2",
		"typescript": "5.7.3"
	},
	"engines": {
		"node": "^18.20.2 || >=20.9.0",
		"pnpm": "^9 || ^10"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"sharp"
		]
	}
}
